<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Text Size">

        <SwitchPreference
            android:key="switch_preference_text_size_default"
            android:title="Size 16" />
        <SwitchPreference
            android:key="switch_preference_text_size_20"
            android:title="Size 20" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_text_size_24"
            android:title="Size 24" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Text Color"
        app:icon="@color/design_default_color_error">
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_color_red"
            android:title="RED"
            app:icon="@color/red" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_color_black"
            android:title="BLACK"
            app:icon="@color/black" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_color_green"
            android:title="GREEN"
            app:icon="@color/green" />
    </PreferenceCategory>

</PreferenceScreen>